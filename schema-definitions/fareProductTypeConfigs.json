{
  "$ref": "#/definitions/FareProductConfiguration",
  "definitions": {
    "LanguageAndTextType": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "lang": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["lang", "value"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "language": {
              "type": ["string", "null"]
            },
            "value": {
              "type": ["string", "null"]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ProductTypeTransportModes": {
      "type": "object",
      "properties": {
        "mode": {
          "$ref": "#/definitions/TransportModeType"
        },
        "subMode": {
          "anyOf": [
            {
              "$ref": "#/definitions/TransportSubmodeType"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": ["mode"],
      "additionalProperties": false
    },
    "FareProductTypeConfigSettings": {
      "type": "object",
      "properties": {
        "zoneSelectionMode": {
          "type": "string",
          "enum": [
            "none",
            "single",
            "single-stop",
            "single-zone",
            "multiple",
            "multiple-stop",
            "multiple-zone",
            "multiple-stop-harbor"
          ]
        },
        "travellerSelectionMode": {
          "type": "string",
          "enum": ["multiple", "single", "none"]
        },
        "timeSelectionMode": {
          "type": "string",
          "enum": ["datetime", "next-morning", "next-morning-minimum", "none"]
        },
        "productSelectionMode": {
          "type": "string",
          "enum": ["duration", "product", "productAlias", "none"]
        },
        "productSelectionTitle": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/LanguageAndTextType"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "requiresLogin": {
          "type": "boolean"
        },
        "offerEndpoint": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["zones", "stop-places", "authority"]
            },
            {
              "type": "null"
            }
          ]
        },
        "onBehalfOfEnabled": {
          "type": "boolean"
        }
      },
      "required": [
        "zoneSelectionMode",
        "travellerSelectionMode",
        "timeSelectionMode",
        "productSelectionMode",
        "requiresLogin",
        "onBehalfOfEnabled"
      ],
      "additionalProperties": false
    },
    "FareProductTypeConfig": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "illustration": {
          "type": ["string", "null"]
        },
        "name": {
          "$ref": "#/definitions/FareProductTypeConfigSettings/properties/productSelectionTitle/anyOf/0"
        },
        "transportModes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductTypeTransportModes"
          }
        },
        "excludedTariffZones": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "excludedFareZones": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "description": {
          "$ref": "#/definitions/FareProductTypeConfigSettings/properties/productSelectionTitle/anyOf/0"
        },
        "configuration": {
          "$ref": "#/definitions/FareProductTypeConfigSettings"
        },
        "isCollectionOfAccesses": {
          "type": "boolean"
        },
        "direction": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["one-way", "two-way"]
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "type",
        "name",
        "transportModes",
        "description",
        "configuration",
        "isCollectionOfAccesses"
      ],
      "additionalProperties": false
    },
