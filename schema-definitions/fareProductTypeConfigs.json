{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/FareProductConfiguration",
  "$id": "http://mittatb.no/schemas/fareProductTypeConfigs.json",
  "definitions": {
    "FareProductConfiguration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fareProductTypeConfigs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FareProductTypeConfig"
          }
        }
      },
      "required": ["fareProductTypeConfigs"],
      "title": "FareProductConfiguration"
    },
    "FareProductTypeConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "name": {
          "$ref": "_common.json#/definitions/LanguageArray"
        },
        "transportModes": {
          "type": "array",
          "items": {
            "$ref": "_common.json#/definitions/TransportMode"
          }
        },
        "illustration": {
          "$ref": "#/definitions/Illustration"
        },
        "description": {
          "$ref": "_common.json#/definitions/LanguageArray"
        },
        "excludedTariffZones": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "configuration": {
          "$ref": "#/definitions/FareProductTypeConfigSettings"
        }
      },
      "required": [
        "configuration",
        "description",
        "name",
        "transportModes",
        "type"
      ],
      "title": "FareProductTypeConfig"
    },
    "FareProductTypeConfigSettings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "zoneSelectionMode": {
          "$ref": "#/definitions/ZoneSelectionMode"
        },
        "travellerSelectionMode": {
          "$ref": "#/definitions/TravellerSelectionMode"
        },
        "timeSelectionMode": {
          "$ref": "#/definitions/TimeSelectionMode"
        },
        "productSelectionMode": {
          "$ref": "#/definitions/ProductSelectionMode"
        },
        "productSelectionTitle": {
          "$ref": "_common.json#/definitions/LanguageArray"
        },
        "requiresLogin": {
          "type": "boolean"
        },
        "offerEndpoint": {
          "type": "string",
          "deprecated": true,
          "description": "Used to specify where we should search offers from. This is deprecated and no longer used in new versions of app."
        }
      },
      "required": [
        "productSelectionMode",
        "requiresLogin",
        "timeSelectionMode",
        "travellerSelectionMode",
        "zoneSelectionMode"
      ],
      "title": "Configuration"
    },
    "ZoneSelectionMode": {
      "type": "string",
      "enum": [
        "none",
        "single",
        "single-stop",
        "single-zone",
        "multiple",
        "multiple-stop",
        "multiple-zone"
      ]
    },
    "Illustration": {
      "type": "string",
      "enum": [
        "single",
        "period",
        "hour24",
        "carnet",
        "night",
        "boat",
        "youth",
        "summer"
      ]
    },
    "TravellerSelectionMode": {
      "type": "string",
      "enum": ["multiple", "single", "none"]
    },
    "TimeSelectionMode": {
      "type": "string",
      "enum": ["datetime", "next-morning", "next-morning-minimum", "none"]
    },
    "ProductSelectionMode": {
      "type": "string",
      "enum": ["duration", "product", "productAlias", "none"]
    }
  }
}
