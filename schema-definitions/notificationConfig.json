{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "salesPackages": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "toggleDescription": {
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "lang": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["lang", "value"]
                },
                {
                  "type": "object",
                  "properties": {
                    "language": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              ]
            }
          },
          "toggleTitle": {
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "lang": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["lang", "value"]
                },
                {
                  "type": "object",
                  "properties": {
                    "language": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              ]
            }
          }
        },
        "required": [
          "id",
          "enabled",
          "salesPackages",
          "toggleDescription",
          "toggleTitle"
        ]
      }
    },
    "modes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          }
        },
        "required": ["id", "enabled"]
      }
    }
  },
  "required": ["groups", "modes"]
}
