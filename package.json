{
  "name": "@atb-as/config-specs",
  "version": "8.2.0",
  "description": "Shared types and validation for fare product type configs",
  "main": "./lib/index.js",
  "license": "EUPL-1.2",
  "bin": "./lib/tools/bin.js",
  "types": "./lib/index.d.ts",
  "files": [
    "schema-definitions",
    "lib",
    "!lib/tests"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AtB-AS/fare-product-type-configs.git"
  },
  "private": false,
  "scripts": {
