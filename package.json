    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "prettier": "^3.2.5",
    "rimraf": "^4.4.1",
    "typescript": "^5.9.2",
    "vitest": "^0.29.8",
    "zod": "^4.1.11"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "glob": "^9.3.2",
    "js-yaml": "^4.1.0",
    "yargs": "^17.7.1"
  },
